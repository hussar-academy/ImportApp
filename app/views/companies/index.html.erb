<h4 class="light col s12">Operations</h4>
<ul class="collection with-header">
  <% @companies.each do |company| %>
    <li class="collection-header"><h5><%= company.name%></h5></li>
    <li class="collection-item">
      <table class="highlight">
        <thead>
          <tr>
            <th data-field="id">Invoice Number</th>
            <th data-field="price">Amount</th>
            <th data-field="name">Reporter</th>
            <th data-field="name">Status</th>
            <th data-field="name">Categories</th>
            <th data-field="name">Invoice Date</th>
            <th data-field="name">Notes</th>
          </tr>
        </thead>
        <tbody>
          <% company.operations.each do |operation| %>
            <tr>
              <td><%= operation.invoice_num %></td>
              <td><%= operation.amount %></td>
              <td><%= operation.reporter %></td>
              <td><%= operation.status %></td>
              <td><%= operation.categories %></td>
              <td><%= operation.invoice_date %></td>
              <td><%= operation.notes %></td>
          </tr>
          <% end %>
        </tbody>
      </table>
    </li>
  <% end %>
</ul>

<br>

